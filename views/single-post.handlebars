<div class="container">
  <div class="row">
    <div class="center border border-5 rounded background-white col-12">
      {{> post-info post}}

      {{#if loggedIn}}
      <form class="comment-form m-1 p-1" id="comment-form">
        <div>
          <textarea name="comment-body contentFont" id="textAreaTest"></textarea>
        </div>

        

        <div>
          <button type="submit" class="btn btn-warning textFont">add comment</button>
          <button type="button" class="upvote-btn btn btn-warning"><i class="fa fa-heart"></i></button>
        </div>
      </form>
      {{/if}}

      {{> comments post.comments}}

    </div>
  </div>
</div>



<script src="/javascript/comment.js"></script>
