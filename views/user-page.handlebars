<div class="container">
    <div class="row">
        {{!-- user info --}}
        <div class="border border-warning card post m-2 p-2 col-12" style="width: 18rem;">
            <h3 class="p-2 my-4 bg-light">welcome to <a class="text-secondary text-decoration-none">{{user.dataValues.username}}'s
                </a>page!<i class=" text-warning fa fa-hand-peace-o"></i></h3>
            <form class="bio-form mb-3">
                {{#if user.dataValues.bio}}
                <h4>Bio:</h4>
                <p name="user-bio" class="m-1 p-1">{{user.dataValues.bio}}</p>
                </br>
                {{/if}}
            </form>
        </div>

        {{!-- user posts --}}
        <div class="card post m-2 p-2 col-12 border-warning" style="width: 18rem;">
            <h3 class="p-2 my-4 bg-light">posts by {{user.dataValues.username}}:</h3>
            <section class="m-2 p-2">
                {{#each user.dataValues.posts as |post|}}
                <div class="p-2 card-body title border-top border-bottom border-6 rounded">
                    <h4 class="card-title">{{post.title}}</h4>
                    <p class="card-text text-muted">{{post.content}}</p>
                    </h5>
                    <a class="card-link"><a href="/post/{{id}}" class="text-warning">{{comments.length}}
                            {{format_plural "comment" comments.length}}</a></a>
                </div>
                </br>
                {{/each}}
                </br>

            </section>
        </div>

    </div>
</div>