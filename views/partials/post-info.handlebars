<article class="post">
    <div class="title">
        <a href="{{user.posts.content}}" target="_blank">{{user.posts.title}}</a>
        <span>({{user.posts.content}})</span>
    </div>
    <div class="meta">
        {{vote_count}} {{"point" vote_count}} by {{user.username}} on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>