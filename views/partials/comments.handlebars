<div class="comments m-1 p-1">
  {{#each this}}
  <article class="comment border-top border-bottom border-6">
    <div class="p-1">
      <a class="text contentFont text-dark">{{comment_text}}</a>
      <p class="mb-2 text-muted text-warning contentFont"><a class="text-warning" href="/user-page/{{id}}" class="edit-link text-dark">{{user.username}}</a> on {{format_date created_at}}</p>
    </div>
  </article>
  {{/each}}
</div>