{{!-- sign up form --}}
<div class="container-fluid">
    <div class="row justify-content-md-center">
        <div class=" p-3 m-5 border border-5 rounded col-8">

            <h2 class="p-1 titleFont">SIGN UP</h2>
            <form id="signup-form" class="signup-form m-3 p-3">
                <div class="mb-3">
                    <label class="form-label textFont" for="username-signup">username:</label>
                    <input class="form-control contentFont" type="text" id="username-signup" />
                </div>
                <div class="mb-3">
                    <label class="form-label textFont" for="email-signup">email:</label>
                    <input class="form-control contentFont" type="text" id="email-signup" />
                </div>
                <div class="mb-3">
                    <label class="form-label textFont" for="password-signup">password:</label>
                    <input class="form-control contentFont" type="password" id="password-signup" />
                </div>
                </br>
                <button type="submit" class="btn btn-warning textFont">sign up</button>
            </form>

            </br>
            <a class="text-warning titleFont" href="/"> &larr; back</a>

        </div>
    </div>
</div>

<script src="/javascript/signup.js"></script>