<div class="container">
    <div class="row justify-content-md-center">
        <div class=" p-3 m-5 border border-5 rounded border-warning col-12">
            {{#if posts}}
            <section class="m-2 p-2">
                {{#each posts as |post|}}
                <article class="post border-bottom border-6 m-1 p-1">
                    <div class="title">
                        <h4 class="text-dark"><a href="/post/{{id}}"
                                class="edit-link text-dark">{{post.title}}</a></h4>
                        <p class="text-body">{{post.content}}</p>
                    </div>
                    <div class="meta text-secondary">
                        {{post.vote_count}} favorite(s)
                        |
                        <a class="text-warning" href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
                    </div>
                    <p class="text-secondary">Posted by <a class="text-warning" href="/user-page/{{id}}"
                                class="edit-link text-dark">{{user.username}}</a> on {{format_date created_at}}</p>
                </article>
                </br>

                {{else}}
                <h5 class="p-3">nothing to see here yet!</h5>
            </section>
        </div>
        {{/each}}
        {{/if}}

    </div>
</div>