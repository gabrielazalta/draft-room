<div class="container dashboard-page">
    <div class="row">
        {{!-- user profile --}}
        <div class="card post m-2 p-2 col-12" style="width: 18rem;">
            <h3 class="p-2 my-4 text-dark titleFont">welcome <a
                    class="text-secondary text-decoration-none">{{user.username}}!
                </a><i class=" text-warning fa fa-hand-peace-o"></i></h3>
            <form class="bio-form mb-3">
                <p name="user-bio" class="m-1 p-1 contentFont text-dark">{{user.bio}}</p>
                <textarea name="bio-text" placeholder="tell us about yourself and favorite beers!"
                    class="form-control bio-text contentFont" rows="1"></textarea>
                <button id="bio" type="button" class="btn btn-light m-2 p-2"><a
                        class="link text-decoration-none text-warning textFont">new bio</a></button>
            </form>
        </div>

        {{!-- your posts --}}
        <div class="card post m-2 p-2 col" style="width: 18rem;">
            <h3 class="p-2 my-4 text-dark textFont">your posts:</h3>
            {{#if posts.length}}
            <section class="m-2 p-2">
                {{#each posts as |post|}}
                <div class="p-2 card-body title border-top border-bottom border-6 rounded">
                    <h4 class="card-title"><a href="/dashboard/edit/{{post.id}}"
                            class="edit-link text-dark titleFont">{{post.title}}</a></h4>
                    <p class="card-text text-muted contentFont">{{post.content}}</p>
                    </h5>
                    <a class="card-link"><a href="/post/{{post.id}}"
                            class="text-warning contentFont">{{comments.length}}
                            {{format_plural "comment" comments.length}}</a></a>
                </div>
                </br>
                {{/each}}
                {{else}}
                <h5 class="p-3 textFont text-secondary">no posts yet, add one now!</h5>
                {{/if}}
                </br>
                <button type="submit" class="btn btn-light btn-outline-warning m-2 p-2"><a
                        class="link text-decoration-none text-warning textFont" href="/new-post">add a new
                        post</a></button>
                </br>
            </section>
        </div>

        {{!-- favorite posts --}}
        <div class="card post m-2 p-2 col" style="width: 18rem;">
            <h3 class="p-2 my-4 text-dark textFont">favorites:</h3>
            <section class="m-2 p-2">
                {{#each allPost as |post|}}
                <div class="p-2 card-body title border-top border-bottom border-6 rounded">
                    <h4 class="card-title"><a href="/dashboard/edit/{{post.id}}"
                            class="edit-link text-dark titleFont">{{post.title}}</a></h4>
                    <p class="card-text text-muted contentFont">{{post.content}}</p>
                    </h5>
                    <a class="card-link"><a href="/post/{{post.id}}"
                            class="text-warning contentFont">{{comments.length}}
                            {{format_plural "comment" comments.length}}</a></a>
                </div>
                {{!-- {{else}}
                <h5 class="p-3 textFont text-secondary">no favorites to show yet!</h5>
                {{/if}} --}}
                {{/each}}
                </br>
            </section>
        </div>

    </div>
</div>


<script src="/javascript/dashboard.js"></script>
<script src="/javascript/add-post.js"></script>
<script src="/javascript/edit-bio.js"></script>
